{
  "name": "liveradar",
  "version": "3.1.1",
  "type": "module",
  "description": "Multi-platform live streaming monitor",
  "engines": {
    "node": ">=20.19.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .js",
    "format": "prettier --write \"src/**/*.{js,css}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "crypto-js": "^4.2.0"
  },
  "devDependencies": {
    "@vitest/ui": "^4.0.16",
    "autoprefixer": "^10.4.23",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "happy-dom": "^20.1.0",
    "husky": "^8.0.3",
    "jsdom": "^27.4.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "prettier": "^3.7.4",
    "tailwindcss": "^3.4.19",
    "terser": "^5.44.1",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "prettier --write"
    ]
  }
}
